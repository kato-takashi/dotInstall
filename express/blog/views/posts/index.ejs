<% include ../header.ejs %>
	<h1>posts</h1>
	<h2><%= posts[0].title %></h2>
	<ul><%for (var i=0; i < posts.length; i++){%>
		<a href="/posts/<%= i%>">
			<li>
				<%= posts[i].title %>
			</li>
		</a>
		<a href="/posts/<%= i%>/edit">
			[Edit]
		</a>
		<form method="post" action="/posts/<%= i %>">
			<input type="submit" value="del">
			<input type="hidden" name="_method" value="delete">
			<input type="hidden" name="id" value="<%= i %>">
		</form>
		<% } %>
	</ul>
	<p><a href="/posts/new">Add New</a></p>
<% include ../footer.ejs %>
